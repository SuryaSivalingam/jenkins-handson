pipeline{
    agent any
    stages{
        stage('stage 1')
        {
            steps{
                sh 'echo STAGE 1'
            }
        }

        stage('stage 2'){
            steps{
                sh 'echo stage 2'
                echo "Doing Jenkins restart"
                sh 'sleep 60'
            }
        }

        stage('stage 3'){
            steps{
                sh 'echo stage 3'
            }
        }
    }
}